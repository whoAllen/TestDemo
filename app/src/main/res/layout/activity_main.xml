<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.languo.testdemo.MainActivity">

    <TextView
        android:id="@+id/main_tv_collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="跳转" />

    <TextView
        android:id="@+id/main_tv_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="通知栏"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/main_tv_span"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <SeekBar
            android:id="@+id/main_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/main_seek_bar_button"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="#000000"
            android:gravity="center"
            android:textColor="#ffffff" />

    </RelativeLayout>

</LinearLayout>
